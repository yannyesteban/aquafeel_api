# For node js
# Default server configuration
   server {
        root /var/www/aquafeel_backend;
        index index.html index.htm;
        server_name api.aquafeelvirginia.com;
	client_max_body_size 20M;
        #location ~ ^/(assets/|css/|dashboard/|fonts/|images/|js/) {
         # root /var/www/jobya.me/public;
          #access_log off;
         #expires max;
        #}

     location / {
        #try_files $uri $uri/ =404;
        proxy_pass http://localhost:4000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
     }
  
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/api.aquafeelvirginia.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/api.aquafeelvirginia.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
 

   server {
    if ($host = api.aquafeelvirginia.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


        server_name api.aquafeelvirginia.com;
	listen 80;
    return 404; # managed by Certbot


}
